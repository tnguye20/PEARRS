<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="tnguye20.pearrs">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity">
        </activity>
        <activity android:name=".WelcomeActivity">
        </activity>
        <activity android:name=".SurveyActivity">
        </activity>
        <activity android:name=".ThankActivity">
        </activity>
        <activity android:name=".IntroductionActivity">
        </activity>
        <activity android:name=".NegativeActivity">
        </activity>
        <activity android:name=".PositiveActivity">
        </activity>
    </application>

</manifest>